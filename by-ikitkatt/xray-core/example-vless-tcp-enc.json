{
  "log": {
    "loglevel": "none"
  },
  "inbounds": [
    {
      "tag": "VLESS_ENCRYPTION",
      "port": 9999,
      "listen": "0.0.0.0",
      "protocol": "vless",
      "settings": {
        "clients": [],
        "decryption": "mlkem768x25519plus.native.600s.#REPLACE_WITH_YOUR_PRIVATE_KEY, GENERATE BELOW IN PANEL â†“ OR USE ./xray vlessenc"
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls",
          "quic"
        ]
      },
      "streamSettings": {
        "network": "raw",
        "security": "none"
      }
    }
  ],
  "outbounds": [
    {
      "tag": "DIRECT",
      "protocol": "freedom"
    },
    {
      "tag": "BLOCK",
      "protocol": "blackhole"
    }
  ],
  "routing": {
    "rules": [
      {
        "ip": [
          "geoip:private"
        ],
        "outboundTag": "BLOCK"
      },
      {
        "domain": [
          "geosite:private"
        ],
        "outboundTag": "BLOCK"
      }
    ]
  }
}